<configuration>
    <property name="LOG_PATH" value="/tmp/oracle/apps/bestool/logs" />

    <!-- Appender para archivo simple -->
    <appender name="FILE" class="ch.qos.logback.core.FileAppender">
        <file>${LOG_PATH}/application-simple.log</file>
        <append>true</append>
        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss} %-5level %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>

    <!-- Appender para consola -->
    <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss} %-5level %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>

    <!-- Appender de archivo rotativo -->
    <appender name="ROLLING_FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <!-- Archivo actual -->
        <file>${LOG_PATH}/application-rolling.log</file>

        <!-- Configuración de política de rotación -->
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <!-- Nombre del archivo rotado con fecha -->
            <fileNamePattern>${LOG_PATH}/application-rolling.%d{yyyy-MM-dd}.log</fileNamePattern>

            <!-- Mantener logs de los últimos 30 días -->
            <maxHistory>30</maxHistory>

            <!-- Limpiar archivos antiguos al iniciar (opcional) -->
            <cleanHistoryOnStart>true</cleanHistoryOnStart>
        </rollingPolicy>

        <!-- Patrón de formato -->
        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss} %-5level %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>

    <!-- Nivel global de logs -->
    <root level="debug">
        <appender-ref ref="CONSOLE" />
        <appender-ref ref="FILE" />
        <appender-ref ref="ROLLING_FILE" />
    </root>
</configuration>
